@model WebUi.Models.InputForms.LoginInputModel

@{
    ViewBag.Title = "Login";
}

<div class="w3-card-4 mr-2">
    <div class="w3-container w3-dark-gray">
        <div class="row">
            <div class="col-9"><h1>Login Here</h1></div>
            <div class="col-3 text-right">
                @*<a href="~/Configuration/GetSubTypes" class="w3-button w3-teal" id="btnBack">Back to List <i class="fa fa-forward"></i></a>*@
            </div>
        </div>
    </div>
    <form class="w3-container mt-2" method="post">
        <p>
            <label class="w3-text-brown"><b>Username</b></label>
            @Html.TextBoxFor(model => model.UserName, new { @class = "w3-input w3-border w3-sand" })
            @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "text-danger" })
        </p>
        <p>
            <label class="w3-text-brown"><b>Password</b></label>
            @Html.TextBoxFor(model => model.Password, new { @class = "w3-input w3-border w3-sand", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
        </p>
        <p class="text-right">
            <button type="submit" class="w3-btn w3-green"><i class="fa fa-sign-in-alt"></i> Login</button>
        </p>
    </form>
</div>

